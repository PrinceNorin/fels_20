<div class="row">
  <div id="top">
    <%= image_tag asset_path("logo.png"), width: "150px", height: "100px",alt: "application logo", id: "logo" %>
    <ul id="top-nav">
      <% if user_signed_in? %>
        <li><%= link_to current_user.username.capitalize, edit_user_path(current_user) %></li>
        <li><%= link_to "Sign Out", sign_out_path %></li>
      <% else %>
        <li><%= link_to "Sign In", sign_in_path %></li>
        <li><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
    </ul>
  </div>
  <div id="nav">
    <div id="nav-inner">
      <% if user_signed_in? %>
        <% if admin? %>
        <li><%= link_to "Home", admin_path %></li>
        <li><%= link_to "Words", admin_words_path %></li>
        <li><%= link_to "Category", admin_categories_path %></li>
        <li><%= link_to "Users", admin_users_path %></li>
        <% else %>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Word List", words_path %></li>
        <li><%= link_to "Category", categories_path %></li>
        <li><%= link_to "Lesson", lessons_path %></li>
        <li><%= link_to "Result", "#" %></li>
        <li><%= link_to "User Show", "#" %></li>
        <% end %>
      <% end %>
    </div>
  </div>
</div>